<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="hello.itemservice.repository.mybatis.ItemMapper">

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into post (user_id,title,content,view_count,created_at)
        values (#{user_id},#{title},#{content},#{view_count},#{created_at})
    </insert>

    <update id="update">
        update post
        set title=#{updateParam.title},
            price=#{updateParam.content},
        where id=#{id}
    </update>

    <delete id="deleteById">

    </delete>

    <select id="findById" resultType="Post">
        select  id,user_id,title,content,view_count,created_at
        from post
        where id=#{id}
    </select>

    <select id="findAll" resultType="Post">
        select id,user_id,title,content,view_count,created_at
        from post
    </select>

</mapper>